
<% fields_all = ['group','generate_name'] %>
<div class="box tabular">
<p><% fields_all.each do |fnm| -%>
    <label class="floating">
        <%= check_box_tag "settings[#{fnm}]", 1, @settings[fnm] == '1'? true : false %>
        <%= l("label_ipf_wt_exp_xls_#{fnm}") %>
    </label>
<% end -%></p>
</div>

<div class="box tabular">
<p>
  <%= label_tag('settings[issues_limit]', "#{l(:label_ipf_wt_exp_xls_issues_limit)}<br>#{l(:label_ipf_wt_exp_xls_issues_limit_help)}" ) %>
	<%= text_field_tag 'settings[issues_limit]', @settings['issues_limit'], {:size => 6, :maxlength => 10 } %>
</p>

<p>
  <%= label_tag('settings[export_name]', l(:label_ipf_wt_exp_xls_name) ) %>
	<%= text_field_tag 'settings[export_name]', @settings['export_name'], {:size => 40, :maxlength => 80 } %>
</p>
</div>

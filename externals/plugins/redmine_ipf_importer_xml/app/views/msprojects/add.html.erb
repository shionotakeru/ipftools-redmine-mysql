    <td><%= link_to task.subject, {:controller => 'issues', :action => 'show', :id => task.id}, :name => 'trackers[]' %></td>
    <td><%= task.tracker.name %></td>
    <td class="assigned-to"><%= task.assigned_to ? link_to_user(task.assigned_to) : '-' %></td>
    <td><%= task.start_date %></td>
    <td><%= task.due_date %></td>
    <td><%= task.created_on %></td>
    </tr>
    <% end %>
  </table>
<% else %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% end %>




        <h2><%=l(:title_ipf_graph_pattern)%></h2>

		<div class="contextual">
		    <%= link_to(l(:label_ipf_graph_pattern_new), 
		                 {:action => 'new', :id => @project}, 
		                  :class => 'icon icon-add') %>
		</div>

	    <table  class="list" border="0">
	        <thead>
	            <tr>
	                <th><%= l(:label_ipf_graph_pattern_name) %></th>
	                <th><%= l(:label_ipf_graph_pattern_explanation) %></th>
	                <th><%= l(:label_ipf_graph_pattern_jsp) %></th>
	                <th></th>
	            </tr>
	        </thead>
	        <tbody>
	            <% @graph_pattern.each do |pattern_row| %>
	                <tr class="<%= cycle("odd", "even") %>">
                        <td><%= link_to(h(pattern_row["name"]), 
                                       {:action => 'update',
                                        :project_id => @project, 
                                        :pattern_id => pattern_row["id"]} 
                                       ) %>
                        </td>
			            <td><%= link_to(h(pattern_row["explanation"]), 
			                           {:action => 'update',
	                                    :project_id => @project, 
	                                    :pattern_id => pattern_row["id"]} 
			                           ) %>
	                    </td>
                        <td><%= link_to(h(pattern_row["jsp"]), 
                                       {:action => 'update',
                                        :project_id => @project, 
                                        :pattern_id => pattern_row["id"]} 
                                       ) %>
                        </td>
	                    <td><%= link_to(l(:label_ipf_graph_pattern_delete), 
	                                   {:action => 'delete',
	                                    :project_id => @project, 
	                                    :pattern_id => pattern_row["id"]} 
	                                   ) %>
	                </tr>
	            <% end %>
	        </tbody>
	    </table>
